<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:text="@string/guestheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="30dp" />

    <Button
        android:text="@string/eventbtnguest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/button2"
        android:onClick="eventTrans" />

    <Button
        android:text="@string/mapbtnguest"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="39dp"
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:onClick="directTrans" />

    <Button
        android:text="@string/infobtnguest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="42dp"
        android:id="@+id/button4"
        android:onClick="infoTrans" />
</LinearLayout>